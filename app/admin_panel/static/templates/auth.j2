{% extends "base.j2" %}
{% block main %}
<main class="d-flex flex-column align-items-center justify-content-center">
    <h1 class="text-center mb-5">Reversl Admin Panel</h1>
    <form class="text-center" method="POST" action="{{ url_for('admin_panel_login') }}"
        class="d-flex flex-column align-items-center justify-content-center">
        <input type="hidden" name="csrf_token" value="{{ request.state.csrf_token }}">
        <div class="mb-3">
            <label class="form-label" for="email" class="align-self-start">Email</label>
            <input class="form-control" type="email" id="email" name="email" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="password" class="mt-3 align-self-start">Password</label>
            <input class="form-control" type="password" id="password" name="password" required />
        </div>
        <button class="btn fs-5" type="submit">Login</button>
    </form>
    <p class="text-danger mt-3" style="height: 50px; max-height: 50px">{% if request.query_params.get("error")
        %}Invalid credentials{% endif %}</p>
</main>
{% endblock %}