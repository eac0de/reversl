{% extends "base.j2" %}
{% block main %}
<!-- ===== NAVBAR ===== -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
    <div class="container-fluid">
        <!-- Логотип / Название -->
        <a class="navbar-brand" href="#">Reversl Admin Panel</a>

        <!-- Кнопка "бургер" для мобильных -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Сворачиваемое меню -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <!-- Навигация справа -->
            <ul class="navbar-nav ms-auto">
                {% set active = 'active' if request.scope['route'].name == 'ap_home' else
                '' %}
                <li class="nav-item"><a class="nav-link {{active}}"
                        href="{% if not active %}{{ url_for('ap_home') }}{% else %}#{% endif %}">Home</a>
                </li>

                {% if "R_USER" in request.user.permission_codes %}
                {% set active = 'active' if request.scope['route'].name == 'ap_users' else
                '' %}
                <li class="nav-item"><a class="nav-link {{active}}"
                        href="{% if not active %}{{ url_for('ap_users') }}{% else %}#{% endif %}">Users</a>
                </li>
                {% endif %}

                {% if "R_CHAT" in request.user.permission_codes %}
                {% set active = 'active' if request.scope['route'].name == 'ap_chats' else
                '' %}
                <li class="nav-item"><a class="nav-link {{active}}"
                        href="{% if not active %}{{ url_for('ap_chats') }}{% else %}#{% endif %}">Chats</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<div class="d-flex flex-column justify-content-center align-items-center" style="height: calc(100% - 56px);">
    <div id="box" class="d-flex flex-row shadow rounded overflow-hidden scrollarea">
        {% block page %}
        {% endblock %}
    </div>
</div>
<script src="{{ get_static_url('js', 'main.js') }}"></script>
{% endblock %}