<div class="modal fade" id="editChatModal" tabindex="-1" aria-labelledby="editChatModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="edit-chat-form">
                <div class="modal-header">
                    <h5 class="modal-title" id="editChatModalLabel">Edit Chat Info</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="csrf_token" value="{{ request.state.csrf_token }}">
                    <div class="mb-3">
                        <label for="form-chat-first-name" class="form-label">First Name</label>
                        <input type="text" name="first_name" class="form-control" id="form-chat-first-name"
                            value="{{ selected_chat.first_name or '' }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-chat-last-name" class="form-label">Last Name</label>
                        <input type="text" name="last_name" class="form-control" id="form-chat-last-name"
                            value="{{ selected_chat.last_name or '' }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-chat-patronymic-name" class="form-label">Patronymic Name</label>
                        <input type="text" name="patronymic_name" class="form-control" id="form-chat-patronymic-name"
                            value="{{ selected_chat.patronymic_name or '' }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-chat-email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" id="form-chat-email"
                            value="{{ selected_chat.email or '' }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-chat-phone-number" class="form-label">Phone</label>
                        <input type="tel" name="phone_number" class="form-control" id="form-chat-phone-number"
                            value="{{ selected_chat.phone_number or '' }}">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>