<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="edit-user-form">
                <div class="modal-header">
                    <h5 class="modal-title" id="editUserModalLabel">Edit User Info</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="csrf_token" value="{{ request.state.csrf_token }}">
                    <div class="mb-3">
                        <label for="form-user-first-name" class="form-label">First Name</label>
                        <input type="text" name="first_name" class="form-control" id="form-user-first-name"
                            value="{{ selected_user.first_name or '' }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-user-last-name" class="form-label">Last Name</label>
                        <input type="text" name="last_name" class="form-control" id="form-user-last-name"
                            value="{{ selected_user.last_name or '' }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-user-patronymic-name" class="form-label">Patronymic Name</label>
                        <input type="text" name="patronymic_name" class="form-control" id="form-user-patronymic-name"
                            value="{{ selected_user.patronymic_name or '' }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-user-email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" id="form-user-email"
                            value="{{ selected_user.email }}">
                    </div>
                    <div class="mb-3">
                        <label for="form-user-phone-number" class="form-label">Phone</label>
                        <input type="tel" name="phone_number" class="form-control" id="form-user-phone-number"
                            value="{{ selected_user.phone_number or '' }}">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>