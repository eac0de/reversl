{% extends "main.j2" %}
{% block page %}
<div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-body-tertiary" style="width: 280px; height: 100%;">
    <div class="d-flex flex-column list-group list-group-flush border-bottom scrollarea overflow-auto"
        style="scrollbar-width: none;">
        {% for user in users %}
        <a href="{{ url_for('admin_panel_user', user_uid=user.uid) if not selected_user or user.uid != selected_user.uid else '#' }}"
            class="list-group-item list-group-item-action py-3 lh-sm {{ 'active' if selected_user and user.uid == selected_user.uid}}"
            aria-current="true">
            <strong class="mb-1">{{ user.email }}</strong>
            {% if user.full_name %}
            <small class="d-block text-muted">{{ user.full_name }}</small>
            {% endif %}
        </a>
    </div>
</div>
<div class="d-flex flex-column w-100">
    {% endfor %}
    {% if selected_user %}
    <p class="mt-3">First Name:{{ selected_user.first_name }}</p>
    <p class="mt-3">Last Name:{{ selected_user.last_name }}</p>
    <p class="mt-3">Patronymic Name:{{ selected_user.patronymic_name }}</p>
    {% endif %}
</div>
{% endblock %}